{
  "name": "synaptic-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Synaptic - Second Brain AI Assistant",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:start": "docker-compose -f docker/docker-compose.yml up -d",
    "db:stop": "docker-compose -f docker/docker-compose.yml down",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.5"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18.0.0"
  }
}